/* pages/rank/rank.wxss */
.topList {
    margin: 20rpx;
}

.topList .item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
    background: #fff;
}

.topList .media {
    flex: 0 0 200rpx;
    position: relative;
    width: 200rpx;
    height: 200rpx;
}

.topList .media .img {
    width: 100%;
    height: 100%;
}

.topList .media .count {
    position: absolute;
    bottom: 10rpx;
    left: 10rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #fff;
    opacity: 0.6;
}

.topList .media .count:before {
    display: inline-block;
    margin-right: 6rpx;
    content: '';
    width: 20rpx;
    height: 20rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.topList .info {
    flex: auto;
    margin-left: 30rpx;
    overflow: hidden;
}

.topList .info .title {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #000;
    margin-bottom: 10rpx;
}

.topList .info .text {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.5);
}

.topList .info .text text {
    color: #000;
    margin-left: 16rpx;
    margin-right: 10rpx;
}

.topList .arrow {
    flex: 0 0 12rpx;
    margin-right: 20rpx;
    width: 12rpx;
    height: 12rpx;
    border-right: 1px solid #b2b2b2;
    border-bottom: 1px solid #b2b2b2;
    transform: rotate(-45deg);
}