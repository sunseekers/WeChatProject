/* pages/search/search.wxss */
.search {
    display: flex;
    flex-direction: column;
    height: 93.5%;
    background: #fff;
}

.search .search-bar {
    position: relative;
    padding: 16rpx 20rpx;
    display: flex;
    box-sizing: border-box;
    background-color: #efeff4;
}

.search .search-wrap {
    position: relative;
    flex: auto;
    border-radius: 10rpx;
    background: #fff;
    border: 1rpx solid #e6e6ea;
}

.search .search-box {
    position: relative;
    display: flex;
    box-sizing: border-box;
}

.search .icon-search {
    margin: 16rpx 16rpx 16rpx 20rpx;
}

.search .search-input {
    flex: 1;
    padding-top: 6rpx;
    padding-bottom: 6rpx;
    padding-right:  60rpx;
    font-size: 28rpx;
    height: 56rpx;
    line-height: 56rpx;
}

input::-webkit-input-placeholder {
    color: rgb(117, 117, 117);
}

.search .icon-clear {
    position: absolute;
    top: 12rpx;
    right: 16rpx;
}

.search .cancel-btn {
    margin-left: 20rpx;
    line-height: 70rpx;
    color: #09bb07;
    white-space: nowrap;
    font-size: 28rpx;
    box-sizing: border-box;
}
/* 热门搜索 */

.search-hot {
    padding: 30rpx;
}

.search-hot .hot-title {
    display: block;
    color: rgba(0, 0, 0, 0.6);
    margin-bottom: 16rpx;
}

.search-hot .hot-wrap {
    font-size: 0;
}

.search-hot .hot-item {
    display: inline-block;
    font-size: 14px;
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #000;
    border: 2rpx solid rgba(0, 0, 0, 0.6);
    border-radius: 28rpx;
    word-break: keep-all;
    margin-bottom: 20rpx;
    margin-right: 28rpx;
}
.search-hot .special {
    display: inline-block;
}
.search-hot .hot-item.hot {
    color: #fc4524;
    border-color: #fc4524;
}


/* 搜索历史 */


.search-history .search-record {
    background: #fff;
}

.search-history .record-item {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ededed;
}

.search-history .icon-time {
    padding: 16rpx 16rpx 16rpx 0;
}

.search-history .record_con {
    flex: 1;
    display: block;
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.search-history .icon-close {
    padding: 16rpx 0 16rpx 16rpx;
}
.record_handle{
    text-align: center;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #47c88a;
}


/*搜索结果*/

.search-result {
    flex: auto;
    position: relative;
}

.search-result scroll-view {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
}

.result-item {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 20rpx 0 20rpx 110rpx;
    overflow: hidden;
    border-bottom: 2rpx solid #e5e5e5;
}

.result-item .icon {
    position: absolute;
    top: 36rpx;
    left: 36rpx;
    width: 44rpx;
    height: 40rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.result-item .icon.nocopyright:after {
    content: '';
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    bottom: 0;
    right: -2rpx;
    background: #fff url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.result-item .media {
    position: absolute;
    left: 16rpx;
    top: 16rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 999rpx;
}

.result-item .title,
.result-item .subtitle {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 36rpx;
}

.result-item .title {
    margin-bottom: 4rpx;
    color: #000;
}

.result-item .subtitle {
    color: #808080;
    font-size: 24rpx;
}

.result-item:first-child .subtitle text {
    margin-right: 20rpx;
}

.result-item:not(:first-child) .subtitle text:not(:first-child):before {
    content: '/';
    margin: 0 8rpx;
}

.loading {
    padding: 10rpx;
    text-align: center;
}

.loading:before {
    display: inline-block;
    margin-right: 5rpx;
    vertical-align: middle;
    content: '';
    width: 40rpx;
    height: 40rpx;
    background: url(https://imgcache.gtimg.cn/mediastyle/mobile/app/qq/img/icon_loading.png?max_age=19830212&d=20151105145423) no-repeat;
    background-size: contain;
    animation: rotate 1s linear infinite;
}

.loading.complete:before {
    display: none;
}
.backToTop{
    position: fixed;
    bottom: 80rpx;
    right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100rpx 100rpx;
}
